<!-- Automatic element centering using js -->
<div class="center">
    <div class="headline text-center" id="time">
        <!-- Time auto generated by js -->
    </div>

    <div class="form-box" id="login-box">
        <div class="header ochsnerBlue-opacity">
            <img src="/images/logo-login-neg.png" alt="Smartfactory logo" class="login-logo" />
        </div>
        <form action="/login/check" method="post">
            <div class="body ochsnerGray-opacity">
                <%- partial('../blocks/server-validation.ejs') %>

                <div class="form-group">
                    <input type="text" name="username" class="form-control" placeholder="<%= __("Username") %>"/>
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="<%= __("Password") %>"/>
                </div>
            </div>
            <div class="footer ochsnerGray-opacity">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <button type="submit" class="btn bg-ochsnerBlue btn-block"><%= __("Log in") %></button>
            </div>
        </form>
    </div>
</div><!-- /.center -->